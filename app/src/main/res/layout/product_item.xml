<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    android:elevation="4dp">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="4dp"
        android:textSize="16sp"
        android:text="@string/product_name">
    </TextView>

    <TextView
        android:id="@+id/product_portion_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/product_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="4dp"
        android:textSize="16sp"
        android:text="@string/product_portion_weight">
    </TextView>

    <TextView
        android:id="@+id/product_portion_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:padding="2dp"
        android:text="@string/product_portion_calories"
        android:textSize="16sp"
        app:flow_verticalBias="50"
        app:layout_constraintBottom_toBottomOf="@id/product_options_button"
        app:layout_constraintEnd_toStartOf="@id/product_options_button"
        app:layout_constraintTop_toTopOf="@id/product_options_button">
    </TextView>

    <ImageButton
        android:id="@+id/product_options_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="4dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_delete"
        android:backgroundTint="@color/transparent"/>



    <TextView
        android:id="@+id/product_proteins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        app:layout_constraintTop_toBottomOf="@id/product_portion_weight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:textSize="16sp"
        android:text="@string/product_proteins">
    </TextView>

    <TextView
        android:id="@+id/product_fats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="@string/product_fats"
        android:textSize="16sp"
        android:padding="2dp"
        app:layout_constraintStart_toEndOf="@id/product_proteins"
        app:layout_constraintTop_toTopOf="@id/product_proteins"
        app:layout_constraintBottom_toBottomOf="@id/product_proteins">
    </TextView>

    <TextView
        android:id="@+id/product_carbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="@string/product_carbs"
        android:textSize="16sp"
        android:padding="2dp"
        app:layout_constraintStart_toEndOf="@id/product_fats"
        app:layout_constraintTop_toTopOf="@id/product_proteins"
        app:layout_constraintBottom_toBottomOf="@id/product_proteins">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>